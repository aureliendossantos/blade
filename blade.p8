function create_popup(question,
...)
 local c={...}
 local width=#question*4+12
 local height=15+#c*12
	popup={
	 x=64-width/2,
	 y=64-height/2,
	 w=width,
	 h=height,
	 t=question,
	 choices=c,
	 index=1
	}
end

function draw_popup()
	if popup then
		draw_win_bg(popup)
		local c=popup.choices
		local w=0
		for i=1,#c do
			local test=#c[i]*4+8
			w=test>w and test or w
		end
		for i=1,#c do
			local h=8
			local x=64-w/2
			local y=popup.y+15+(i-1)*(h+2)
			rectfill(x,y,x+w,y+h,0)
		 rect(x,y,x+w,y+h,
		 popup.index==i and 6 or 5)
			print(c[i],65-#c[i]*2,y+2,
			popup.index==i and 6 or 5)
		end
	end
end

