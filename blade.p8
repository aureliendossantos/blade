function init_mat_win()
	mat_win={x=0,y=7,w=75,h=121}
end

function draw_mat_win()
	draw_win_bg(mat_win)
	spr(tab and 48 or 51,4,0,3,1)
	local c=materials
	if not tab then
	 c=enchants
	end
	for i=1,#c do
	 local w=68
		local h=16
		local x=3
		local y=11+(i-1)*(h+2)
		rectfill(x,y,x+w,y+h,0)
	 rect(x,y,x+w,y+h,5)
	 spr(c[i].icon,x+3,y+4)
	 print(c[i].t1,x+13,y+3,6)
	 print(c[i].t2,x+13,y+9,5)
	 local g=tostr(c[i].g)
	 local gx=x+w-#g*4
	 print(g,gx-1,y+9,6)
	 spr(54,gx-6,y+7)
	end
end

