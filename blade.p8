function init_qu_win()
	qu_win={x=30,y=11,w=75,h=101,
	t=quests[cur_qu].t1}
end

function draw_qu_win()
	draw_win_bg(qu_win)
	local q=quests[cur_qu]
	local x=qu_win.x+4
	local y=qu_win.y+20
	local w=qu_win.w
	print(q.t2,x,y,7)
	local s="-requirements-"
	print(s,x-4+w/2-#s*2,y+30,6)
	y+=40
	s="ATK:"..q.atk
	print(s,x,y,6)
	if q.atk_bonus then
		spr(55,x+#s*4,y)
	end
	y+=7
	s="WGT:"..q.wgt
	print(s,x,y,6)
	if q.wgt_bonus then
		spr(55,x+#s*4,y)
	end
	y+=7
	s="SOL:"..q.sol
	print(s,x,y,6)
	if q.sol_bonus then
		spr(55,x+#s*4,y)
	end
	y+=8
	if q.poison then
		spr(4,x-2,y-2)
		print("pOISONOUS",x+6,y,6)
		y+=7
	end
	if q.fire then
		spr(3,x-2,y-2)
		print("fIRE rEPEL",x+6,y,6)
		y+=7
	end
end
